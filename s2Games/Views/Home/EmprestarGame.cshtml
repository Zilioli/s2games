@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Empréstimo de Game</h4>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label for="sel1">Amigo:</label>
                <select class="form-control" id="cboAmigos">
                    <option value="0">-- Selecione um Amigo --</option>
                    @foreach (var amigo in ViewBag.listaAmigos)
                    {
                        <option value="@amigo.codigo">@amigo.nome</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="sel1">Game:</label>
                <select class="form-control" id="cboGames">
                    <option value="0">-- Selecione um Game -- </option>
                    @foreach (var game in ViewBag.listaGames)
                    {
                        <option value="@game.codigo">@game.nome</option>
                    }
                </select>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" onclick="Salvar()">Emprestar</button>&nbsp;
            <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
        </div>
    </div>

</div>