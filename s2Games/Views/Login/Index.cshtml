@model  s2Games.Models.user

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - S2 Games</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @using (Html.BeginForm("Login", "Login",  FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken();

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col-lg-12 vertical-center">

            <div class="col-lg-4 container">

                <div class="form-login">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="panel-title">Login S2 Games</div>
                        </div>

                        <div style="padding-top:30px" class="panel-body">
                            <div style="display:none" id="result" class="alert alert-danger col-sm-12">

                            </div>

                            <div style="margin-bottom: 25px" class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                @Html.EditorFor(model => model.login, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Login", autofocus = true } })
                                @Html.ValidationMessageFor(Model => Model.login, "", new { @class = "text-danger" })
                            </div>

                            <div style="margin-bottom: 25px" class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                @Html.EditorFor(model => model.senha, new { htmlAttributes = new { @class = "form-control input-lg password", placeholder = "Senha" } })
                                @Html.ValidationMessageFor(model => model.senha, "", new { @class = "text-danger" })
                            </div>

                            <div style="margin-top:10px" class="form-group">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div style="float:right">
                                            <input type="submit" value="Acessar" class="btn primary btn-lg" />
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (ViewBag.Mensagem != null && !ViewBag.Mensagem.ToString().Equals(""))
    {
        <script type="text/javascript" >
            alert(" @ViewBag.Mensagem");
        </script>
    }

</body>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
</html>